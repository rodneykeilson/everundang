// EverUndang â€“ public read for published invites only
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Events live under /tenants/{tid}/events/{eid}
    match /tenants/{tid}/events/{eid} {
      // Public can read only if published
      allow read: if resource.data.isPublished == true;
      // No public writes in Step 1
      allow write: if false;
    }

    // Optional pages under /tenants/{tid}/pages/{pid}
    match /tenants/{tid}/pages/{pid} {
      allow read: if resource.data.isPublished == true;
      allow write: if false;
    }
  }
}
